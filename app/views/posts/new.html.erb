<h1>New Post</h1>


<%= form_for :post, class: 'form', url: posts_path do |f| %>
    
    <%= f.label :title, class: 'label' %>
    <%= f.text_field :title, class: 'text' %>
    <%= f.label :body, class: 'label' %>
    <%= f.text_field :body, class: 'text' %>
    <%= f.submit class: 'btn x-submit' %>
   
<% end %>