<header class="b-header">
    <h1 class="title"><%= link_to "Site Title", root_path %></h1>
     <% if current_page?(root_path) %>
         <p class="subtitle">All Posts</p>
    <% elsif current_page?(about_path) %>
        <p class="subtitle">About</p>
    <% else %>
        <%= link_to "Back to all posts", root_path %>
    <% end %>
    <nav class="b-main-nav">
        <ul class="list">
            <% if user_signed_in? %>
                <li class="list-item"><%= link_to "New Post", new_post_path %></li>
            <% end %>
            <li class="list-item"><%= link_to "About", about_path %></li>
            <% if user_signed_in? %>
                <li class="list-item"><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
            <% else %>
            <li class="list-item"><%= link_to('Admin Login', new_user_session_path)  %></li>
            <% end %>
        </ul>
    </nav>
</header>