<%= form_for @post, html: { multipart: true } do |f| %>
   
<% if @post.errors.any? %>
    <div class="errors">
        <p class="errors-count"><%= pluralize(@post.errors.count, "error") %> prevented this post from saving.</p>
        <ul class="errors-list">
            <% @post.errors.full_messages.each do |msg| %>
                <li class="error"><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>
   
    <%= f.label :title, class: 'label' %>
    <%= f.text_field :title, class: 'text' %>
    <%= f.label :body, class: 'label' %>
    <%= f.text_area :body, class: 'text' %>
    <%= f.label :image, class: 'label' %>
    <%= f.file_field :image, class: 'file' %>
    <%= f.submit class: 'btn x-submit' %>
   
<% end %>